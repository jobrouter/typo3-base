{
	"name": "brotkrueml/typo3-jobrouter-base",
	"description": "Base extension for the TYPO3 JobRouter® extensions",
	"license": "GPL-2.0-or-later",
	"type": "typo3-cms-extension",
	"keywords": [
		"TYPO3 CMS",
		"TYPO3 extension",
		"JobRouter"
	],
	"authors": [
		{
			"name": "Chris Müller",
			"role": "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/brotkrueml/typo3-jobrouter-base/issues",
		"source": "https://github.com/brotkrueml/typo3-jobrouter-base",
		"docs": "https://typo3-jobrouter.readthedocs.io/projects/base/"
	},
	"require": {
		"php": ">=7.3",
		"symfony/polyfill-php80": "^1.15",
		"typo3/cms-core": "^10.4.11 || ^11.5.3"
	},
	"require-dev": {
		"brotkrueml/coding-standards": "~1.2.0",
		"captainhook/captainhook": "^5.10",
		"ergebnis/composer-normalize": "^2.18",
		"php-coveralls/php-coveralls": "^2.4",
		"phpstan/extension-installer": "^1.1",
		"phpstan/phpstan": "1.4.2",
		"phpunit/phpunit": "^9.5",
		"rector/rector": "0.12.13",
		"symfony/yaml": "^4.4 || ^5.4 || ^6.0",
		"symplify/phpstan-rules": "^10.0",
		"typo3/cms-dashboard": "^10.4.11 || ^11.5.3",
		"typo3/cms-extbase": "^10.4.11 || ^11.5.3",
		"typo3/cms-form": "^10.4.11 || ^11.5.3"
	},
	"suggest": {
		"brotkrueml/typo3-jobrouter-data": "Synchronise and transmit to JobData tables",
		"brotkrueml/typo3-jobrouter-process": "Start instances in JobRouter®"
	},
	"autoload": {
		"psr-4": {
			"Brotkrueml\\JobRouterBase\\": "Classes"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Brotkrueml\\JobRouterBase\\Tests\\": "Tests"
		}
	},
	"config": {
		"allow-plugins": {
			"ergebnis/composer-normalize": true,
			"phpstan/extension-installer": true,
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		},
		"bin-dir": ".Build/bin",
		"sort-packages": true,
		"vendor-dir": ".Build/vendor"
	},
	"extra": {
		"branch-alias": {
			"dev-main": "1.2.x-dev"
		},
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"extension-key": "jobrouter_base",
			"web-dir": ".Build/web"
		}
	},
	"scripts": {
		"post-autoload-dump": ".Build/bin/captainhook install -f -s"
	}
}
